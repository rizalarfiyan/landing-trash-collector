---
import SubTitle from "@components/sub-title.astro";

const logos = [
  "https://logo.clearbit.com/waste4change.com",
  "https://logo.clearbit.com/greeneration.org",
  "https://logo.clearbit.com/surplus.id",
  "https://logo.clearbit.com/evoware.id",
  "https://logo.clearbit.com/refillmybottle.com",
  "https://logo.clearbit.com/worldwildlife.org",
  "https://logo.clearbit.com/greenpeace.org",
  "https://logo.clearbit.com/theoceancleanup.com",
  "https://logo.clearbit.com/rainforest-alliance.org",
  "https://logo.clearbit.com/fsc.org",
  "https://logo.clearbit.com/terracycle.com",
  "https://logo.clearbit.com/wm.com",
  "https://logo.clearbit.com/rubicon.com",
  "https://logo.clearbit.com/patagonia.com",
  "https://logo.clearbit.com/ecosia.org",
  "https://logo.clearbit.com/thebodyshop.com",
  "https://logo.clearbit.com/kleankanteen.com",
];
---

<section id="partners" class="py-20 md:py-28 bg-white">
  <div class="container space-y-12">
    <div
      class="text-center mx-auto space-y-1 max-w-3xl flex flex-col items-center"
    >
      <SubTitle icon="lucide:handshake" title="Our Partners" class="mx-auto" />
      <h2 class="text-5xl text-burnham-900">Partners</h2>
    </div>
    <div
      x-data="logoWall()"
      x-init="init()"
      class="w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]"
    >
      <ul
        x-ref="logos"
        class="flex items-center justify-center md:justify-start [&_li]:mx-8 animate-logo-wall"
      >
        {
          logos.map((logoUrl, index) => (
            <li>
              <img
                src={logoUrl}
                alt={`Partner Logo ${index + 1}`}
                class="max-w-none h-16 md:h-24 w-auto object-contain grayscale opacity-70 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
              />
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
