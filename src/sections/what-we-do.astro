---
import Button from "@components/button.astro";
import SubTitle from "@components/sub-title.astro";
import { cn } from "@utils";

const features = [
  {
    number: "01.",
    title: "Trash Pickup Truck",
    description:
      "Enjoy scheduled and on-time waste collection right at your doorstep. With Trash Collector, you can easily set pickup times for household waste, organic materials, or bulky items through our platform.",
  },
  {
    number: "02.",
    title: "Trash Bin Locator Map",
    description:
      "Find the nearest waste disposal bins using our interactive map. With real-time information and waste type categories (organic, non-organic), you can quickly and correctly dispose of your trash at designated locations.",
  },
  {
    number: "03.",
    title: "Point-Based Gamification",
    description:
      "We make waste management fun! Earn points when you throw trash in the right bin, recycle items, or schedule pickups through our app. Redeem points for exciting rewards or discounts on services.",
  },
  {
    number: "04.",
    title: "Recycling Services",
    description:
      "Trash Collector supports a sustainable lifestyle with dedicated recycling services. We provide collection schedules and locations for recyclable materials like paper, plastics, electronics, and more.",
  },
  {
    number: "05.",
    title: "Guides and Resources",
    description:
      "We believe education is key. Access practical guides, articles, and videos on how to sort your waste, recycle properly, and adopt eco-friendly habits. All available directly through our website or mobile app.",
  },
];
---

<section id="what-we-do" class="py-20 md:py-28 bg-pistachio-50">
  <div class="container">
    <div
      class="flex flex-col-reverse lg:flex-row gap-y-16 gap-x-20 items-start"
    >
      <div class="w-full lg:w-1/2 space-y-8">
        {
          features.map((feature, index) => (
            <div
              class={cn(
                "space-y-3 pb-8",
                index < features.length - 1 && "border-b border-pistachio-300",
              )}
            >
              <h3 class="text-2xl md:text-3xl font-bold font-chivo">
                <span class="text-pistachio-500">{feature.number}</span>
                <span class="text-pistachio-900 ml-3">{feature.title}</span>
              </h3>
              <p class="text-burnham-700">
                {feature.description}
              </p>
            </div>
          ))
        }
      </div>
      <div class="w-full lg:w-1/2 lg:sticky lg:top-28">
        <div class="space-y-4">
          <SubTitle icon="lucide:recycle" title="What We Do" />
          <h2 class="text-5xl text-burnham-900">
            Smarter Waste Management with Trash Collector
          </h2>
          <p class="text-base text-burnham-700 pt-2">
            Trash Collector is your smart solution for efficient and eco-friendly
            waste management. With innovative digital features, we help
            communities stay clean and green through an integrated and
            easy-to-use system that's even fun to engage.
          </p>
          <div class="pt-4">
            <Button text="LEARN MORE" icon="lucide:arrow-up-right" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>