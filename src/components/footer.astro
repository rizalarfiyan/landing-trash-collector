---
import { SITE, SOCIALS } from "@config";
import Logo from "./logo.astro";
import { Icon } from "astro-icon/components";

const year = new Date().getFullYear();
---

<footer class="bg-burnham-900 text-pistachio-100">
  <div class="container">
    <div
      class="flex items-center flex-col lg:flex-row justify-between gap-5 py-10"
    >
      <Logo />
      <div
        class="font-semibold text-center font-chivo flex items-center justify-center flex-col sm:flex-row gap-0 sm:gap-2"
      >
        <span>Copyright &#169; {year} {SITE.title}.</span>
        <span class="hidden sm:block">|</span>
        <span>All Right Reserved.</span>
      </div>
      <div class="flex items-center gap-3">
        {
          SOCIALS.map((item) => (
            <a
              href={item.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-pistachio-100 hover:text-pistachio-300 transition-colors duration-300"
            >
              <Icon name={item.icon} class="size-8" />
              <span class="sr-only">{item.title}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
