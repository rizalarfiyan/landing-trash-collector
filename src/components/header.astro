---
import Logo from "./logo.astro";

const menus = [
  {
    title: 'Home',
    id: 'hero',
  },
  {
    title: 'Service',
    id: 'our-service',
  },
  {
    title: 'About',
    id: 'about-us',
  },
  {
    title: 'Testimonial',
    id: 'testimonial',
  },
  {
    title: 'FAQ',
    id: 'list-of-faq',
  },
]
---

<header class="fixed w-full backdrop-blur-md bg-black/30 z-50">
  <div class="container" x-data>
    <div class="flex items-center justify-between text-white py-3">
      <Logo />
      <div class="flex items-center justify-center">
        {menus.map((menu) => (
          <a href={'#' + menu.id} x-on:click.prevent="$scrollTo" class="font-semibold text-white font-chivo hover:text-burnham-200 transition duration-300 ease-in-out mx-4">
            {menu.title}
          </a>
        ))}
      </div>
    </div>
  </div>
</header>
